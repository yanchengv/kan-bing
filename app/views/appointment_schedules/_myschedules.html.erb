            document.getElementById('save_app').setAttribute('disabled','disabled')
        }else{
            document.getElementById('save_app').removeAttribute('disabled')
        }
    }
    $(function() {
        $('#schedule_date').datetimepicker({
            lang:'ch',
            timepicker:false,
            format:'Y-m-d'
        });

