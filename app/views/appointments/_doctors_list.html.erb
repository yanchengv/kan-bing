<div class="">
  <% if !@doctor_users.empty? %>
      <div id="search_doctors">
        <div class="">
          <% @doctor_users.each do |doctor| %>
              <div>
                <% if (!(doctor['photo'].nil?)) &&  ( !(doctor['photo']=''))%>
                    <%= image_tag(doctor['photo'], alt: "default", :width => "100", :height => "140", :class => "pull-left") %>
                <% else %>
                    <%= image_tag('default.png', alt: "default", :width => "100", :height => "140", :class => "pull-left") %>
                <% end %>
              <div class="">
                <h3 class="pull-left"><%= link_to "#{doctor['name']} "%> </h3>
               <span class="pull-left"><strong><%= doctor['hospital']['hospital_name'] unless doctor['hospital'].nil?%> <%#=user.doctor.hospital.hospital_name%>           &nbsp;
               <%= doctor['department']['department_name'] unless doctor['department'].nil? %></strong></span><span class="clear"></span><br>
                <div class="clear"></div>
                <strong>专业技能<%#=t('.skilled') %>:</strong><%= doctor['expertise'] %>
                <br>
                <strong>简介<%#=t('.description') %>：</strong><%= doctor['introduction'] %>
                <div class="clear"></div>
              </div>
              <% if !@dictionary.nil? %>
                  <%= link_to '预约', {:controller => 'appointment_schedules', :action => 'doctorschedule', :id => "#{doctor['id']}", :dictionary_id => "#{@dictionary['id']}"}, :class => "pull-right btn btn-green " %>
              <% else %>
                  <%= link_to '预约', {:controller => 'appointment_schedules', :action => 'doctorschedule', :id => "#{doctor['id']}"}, :class => " pull-right btn-green " %>
              <% end %>
              <br>
              </div>
          <% end %>
        </div>
      </div>
   <% else  %>
      <div class="">
        没有可显示信息！<%#=t('.No information of doctors can display!') %>
      </div>
  <% end %>
</div>