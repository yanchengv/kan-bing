<div class="container bgcolor-white" style="margin-top:-20px;">
  <h3 class="font-yahei title-bg font-18"><span class="icon-title"></span>患者的预约界面</h3>

  <div class="row">
    <div class="col-md-12">
      <%= render partial: 'appointments/user_appItem'%>
    </div>
    <div class="col-md-12">
      <h3 class="font-16 font-yahei"><strong>查询预约<%#=t('.search_appointment') %></strong></h3>
      <table>
        <%= form_for("",:url => {:controller=>'appointments',:action=>'get_doctors' }, :method => 'post', :html=>{:id => 'my_form_id'}, :remote => true) do |f| %>
            <tr>
              <td >医院：</td>
              <td class="space5">
                <select id="hospitalselect" name="hospital_id" class="btn btn-default" onchange="search('hos')" >
                  <% hospitals_array = @hospitals.map { |hospital| [hospital['short_name'], hospital['id']] } %>
                  <option value="">请选择</option>
                  <%= options_for_select(hospitals_array) %>
                </select>
              </td>
              <td>科室:</td>
              <td class="space5">
                <select id="department" name="department_id" class=" btn btn-default"  onchange="search('')">
                </select>
              </td>
              <td>预约类型：</td>
              <td>
                <select id="dictionary_id" name="dictionary_id" class="btn btn-default" onchange="search('')">
                  <option value="">请选择</option>
                  <% dictionary = @dictionarys.map { |dic| [dic['name'], dic['id']] } %>
                  <%= options_for_select(dictionary) %>
                </select>
              </td>
            </tr>
        <% end %>
      </table>
      <div id="show_appointment_doctors"></div>
    </div>

  </div>

    <%#= render partial: 'appointments/doctors_list'%>

  <div class="pull-right">

  </div>
</div>
<div class="modal fade" id="flashalert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <% flash.each do |key, value| %>
          <div class="modal-body" id="alert<%= key %>">
            <%= value %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<script type="text/javascript">
    $.ajax({
        type:'get',
        url:'/appointments/get_doctors',
        data:'json',
        success:function(data){
            $('#show_appointment_doctors').html(data)
        },
        error:function(data){
            console.log(data)
        }
    })
    $(document).ready(function () {
        $("#hospitalselect").click();
    })
    function search(str) {
        var hos = $("#hospitalselect").val();
        var dept = $("#department").val();
        var dic = $("#dictionary_id").val();
        if (str == 'hos'){
            change_department(hos, 'department') ;
        }
        $.ajax({
            url: '/appointments/get_doctors',
            type: 'post',
            dataType: 'script',
            data: {
                hospital_id: hos,
                department_id : dept,
                dictionary_id : dic
            }
        });
    }
    function change_department(id, select_id){
        $.ajax({
                    type: "get",
                    url: '/appointments/get_department?hospital_id=' + id,
                    data: 'text',
                    success: function (data) {
                        str = " <option value=''>请选择<%#=t('.please_choose') %></option>"
                        $("#" + select_id).html(str + data);
                    }
                }
        );
    }
    function showflash() {
        $('#flashalert').modal('show');
    }
    function hideflash() {
        $('#flashalert').modal('hide');
    }
    <% if flash[:success] %>
    jQuery(document).ready(function () {
        setTimeout("showflash()", 1);
        setTimeout("hideflash()", 1500);
    });
    <% end %>
</script>