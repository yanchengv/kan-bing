<div class="row">
  <% if !@contact_users.nil? %>
      <% @contact_users.each do |user| %>

          <div class="col-md-6 col-sm-12 col-xs-12">
            <div class="row n">
              <div class="box">
                <div class="col-md-12 box-title">
                  <%= link_to "#{user['user']['name']}", "/patients/patientpage/#{user['user']['id']}", :class => "font-20 font-yahei", :style => "font-weight:bold;" %>
                  <span style="margin-right:-15px;display:inline-block;" class="pull-right">
                <span class="pull-left"><%= link_to "健康档案", "/navigations/navigationhealthrecord?id=#{user['user']['id']}", :class => 'box-title-right', :style => "" %></span>
                <span class="pull-left"><%#= link_to "创建会诊", "/consultations/new?id=#{user['user']['id']}", :class => 'box-title-right', :style => ""%>
                  <span class="pull-left"><button onclick="show_cons_modal(<%=user['user']['id'] %>,'<%= user['user']['name']%>')" class="box-title-right" style="border-top-width:0px;border-right-width:0px;border-bottom-width:0px;">
                    创建会诊
                  </button></span>
                </span>
                <span class="pull-left"><%= link_to "取消关注", del_con_pat_notifications_path([user['user']['id']]), method: :delete, :class => 'box-title-right', :style => "border-top-right-radius:4px;" %></span>
                </span>
                </div>
                <div class="col-md-12 box-content">
                  <a href="/patients/patientpage/<%= user['user']['id'] %>">
                    <% if !user['user']['photo'].nil? && user['user']['photo']!='' %>
                        <%= image_tag default_access_url_prefix_with(user['user']['photo']), :width => "55", :height => "77", :class => "pull-left space3" %>
                    <% else %>
                        <%= image_tag "default.png", :width => "55", :height => "77", :class => "pull-left space3" %>
                    <% end %></a>
                  <div class="pull-left" style="margin-top:-7px;">
                    <div class="pull-left infos"><span><%= user['type'] %></span>

                      <% if !user['user']['birthday'].nil? %>
                          <span><%= Time.now.year.to_i-user['user']['birthday'].to_time.year.to_i %>岁</span>
                      <% end %>
                      <% if !user['user']['gender'].nil? %>
                          <span><%= user['user']['gender'] %></span>
                      <% end %>
                    </div>
                    <div class="clearfix"></div>
                    <div class="infos">
                      <% if !user['user']['mobile_phone'].nil? %>
                          <span><%= user['user']['mobile_phone'] %></span>
                      <% end %>
                      <% if !user['user']['address'].nil? %>
                          <span><%= user['user']['address'] %></span><br/>
                      <% end %>
                      <% if !user['user']['diseases_type'].nil? %>
                          <span><%= user['user']['diseases_type'] %></span><span>最近诊疗时间 <%= user['user']['last_treat_time'] %></span>
                      <% end %>
                    </div>
                  </div>
                  <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
              </div>
            </div>
          </div>

      <% end %>
  <% end %>
</div>
<div class="text-center">
  <%= will_paginate @contact_users, :previous_label => '<', :next_label => '>', :class => ' pagination-mini page num unstyled', :style => 'margin-bottom:5px;display:inline-block;' %>
</div>

<!-- Modal -->
<%= form_for (Consultation.new),url:{action: 'create',controller: 'consultations'} do |f| %>
<div class="modal fade" id="crate_cons_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"></h4>
      </div>
      <div class="modal-body">
        <table style="width:80%;margin:0 auto;" class="font-yahei">
          <%#= tag("input", :type => 'test', :name => 'order_id',:value => @order_id) %>
          <%= f.hidden_field :patient_id,id:'patient_id_cons',value:''%>
          <tr><td><p>会诊标题</p></td><td style="width:340px;"><%= f.text_field :name,:class=> "form-control space"%></td></tr>
          <tr><td><p>计划时间</p></td><td><%= f.text_field :schedule_time,id:'schedule_timepicker',:class=> "form-control space"%></td></tr>
          <tr><td>会诊医生</td><td>
            <select id="doctorlist" multiple="multiple" name="doctorlist[]" style="width:340px;" class="space">
              <%= options_from_collection_for_select(current_user.doctor.docfellows(), 'id', 'name') %>
            </select>
          </td></tr>
          <tr><td>初步诊断</td><td><%= f.text_area :init_info, :rows => 5,:class=> "form-control space"%></td></tr>
          <tr><td>会诊目的</td><td><%= f.text_area :purpose, :rows => 5,:class=> "form-control"%></td></tr>

        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
        <%= f.submit "保存",:class => "btn btn_g"%>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<%end%>
<script>
    $(function () {
        $('.pagination li a').click(function () {
            event.preventDefault();
            var url = '', href = $(this).context.href, arr = [], page;
//            console.log(href)
            arr = href.split('//')[1].split('/');
            url = '/' + arr[1] + '/' + arr[2]
            console.log(url)
            if ($(this).parent().hasClass('active') || url.indexOf('#') != -1) {
            } else {
                page = parseInt(href.split('page=')[1]);
                $.ajax({
                    type: 'get',
                    url: url,
                    data: {
                        page: page
                    },
                    success: function (data) {
                        $('#relation_patient').html('');
                        $('#relation_patient').html(data);
                    },
                    error: function (data) {
                        console.log(data);
                    }
                });
            }
        })
    });

    $(function() {
        $('#schedule_timepicker').datetimepicker({
            step:15,
            lang:'ch'
        });
    });

    //选择会诊医生

    jQuery(document).ready(function() {
        jQuery("#doctorlist").select2({placeholder: "可以选择0个或多个医生"});
    });


    function show_cons_modal(id,name){

            $('#crate_cons_modal').modal('show').on('shown.bs.modal',function(){
                document.getElementById('patient_id_cons').value=id
                document.getElementById('myModalLabel').innerHTML="创建"+name+"的会诊"
            })

        }


</script>