    <%if !@contact_users.nil?%>
        <%@contact_users.each do |con_user|%>
                <dl class="pull-left" style="float:left">
                  <dt><a href="/patients/patientpage/<%=con_user['id']%>">
                    <%if  !con_user['photo'].empty? && !con_user['photo']=''%>
