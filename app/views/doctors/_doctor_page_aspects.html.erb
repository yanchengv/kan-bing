<div class="attending_doctor space2">
  <h4 class="font-16 font-yahei"><strong>他的好友<%#=t('.his_friends') %></strong><a href="/doctors/doctorfriends?id=<%=@doctor1['id']%>&type=1"><span class="pull-right btn btn-default btn-xs"><%=t('.more') %></span></a></h4>
      <div class="row" style="margin:0px;padding:0px;">
      <%if !@contact_doctors1.nil? && !@contact_doctors1.empty?%>
          <%@contact_doctors1.each do |con_doc|%>
