<div id="frients_doctors">
  <%if !@contact_doctors.nil?%>
      <div class="container bgcolor-white" style="margin-top:-20px;">
        <h3 class="font-yahei blue_line font-16"><span class="title_third">我的好友</span><%#=@title%></h3>
        <table class="table table-bordered font-12">
          <thead class="bgcolor-gray">
          <tr class="text-center"><td><b>专家</b></td><td><b>专长</b></td><td><b>简介</b></td><td></td></tr>
          </thead>
        <%@contact_doctors.each do |con_doc|%>
              <% @dictionarys = nil %>
              <% if !con_doc.dictionary_ids.nil? && con_doc.dictionary_ids != ''  %>
                  <% @dictionarys = Dictionary.find(con_doc.dictionary_ids.split(',')) %>
              <% end %>
             <tr>
               <td width="20%">
                 <a href="/doctors/doctorpage/<%=con_doc['id']%>" class="pull-left">
                   <%if !con_doc.photo.nil? && con_doc.photo!=''%>
                       <%=image_tag(Settings.pic+"#{con_doc.photo}", alt:"default",:width => "50",:height => "70" ,:class =>"img_bg")%>
                   <% else %>
                       <%=image_tag("default.png", alt:"default",:width => "50",:height => "70" ,:class =>"img_bg")%>
                   <%end%>
                 </a>
                 <span class="pull-left" style="margin-left:10px;display:inline-block;line-height:24px"><strong><%=link_to "#{con_doc.name}","/doctors/doctorpage/#{con_doc.id}",:class=>"font-14 font-yahei font-color3" %></strong><br />
                   <%=con_doc.hospital.name unless (con_doc.hospital_id.nil? || con_doc.hospital_id == '')%><br />
                   <%=con_doc.department.name unless (con_doc.department_id.nil? || con_doc.department_id == '')%>
                 </span>
               </td>
               <td width="20%"><span class="lineheight-30"><%=con_doc.expertise%></span></br>预约类型:<br />
                 <% if !@dictionarys.nil? %>
                     <% @dictionarys.each do |dic| %>
                         <button class="btn btn-info btn-xs" style='font-family: "楷体","楷体_GB2312";font-size: 12px;margin-bottom: 3px;' disabled="disabled">
                           <%=dic.name %>
                         </button>
                         <% end %><% end %></td>
               <td width="50%"><%=con_doc.introduction%></td>
               <td width="10%">
                 <%= link_to '删除好友', del_con_doc_notifications_path([con_doc.id]),method: :delete,:id=>"add",:class=>"btn btn-success btn-xs"%></td>
             </tr>
        <% end%>

        </table>
        <div class="text-center"><%= will_paginate @contact_doctors,:previous_label => '<', :next_label => '>',:class=>'pagination-mini page num unstyled' %>
        </div>
      </div>
  <%end%>
</div>