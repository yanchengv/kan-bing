<script>
    $('#screening .btn-sm').click(function(){
        var flag;
        if ($('input[name= checkbox]:checked').length==2){
            flag='all'
        }
        if ($('input[name= checkbox]:checked').length==1){
            $('input[name= checkbox]:checked').each(function(){
                flag = $(this).val();
            })
        }
        if ($('input[name= checkbox]:checked').length==0){
            flag='null'
        }
        $.ajax({
            type: 'get',
//            url: '/doctors/get_patients?flag='+$('input[name= relation]:checked').val()+'&first_name='+this.text,
            url: '/doctors/get_patients?flag='+flag+'&first_name='+this.text,
            data: 'json',
            success: function(data){
                $('#relation_patient').html(data)
            }
        })
//        this.href='/doctors/show_friends/?type=1&flag='+$('input[name= relation]:checked').val()+'&first_name='+this.text
    })
    $(function() {
        $.ajax({
            type: 'get',
            url: '/doctors/get_patients?flag=all',
            data: 'json',
            success: function(data){
                $('#relation_patient').html(data)
            }
        })
        $(":checkbox").change(function(){
            var flag;
            if ($('input[name= checkbox]:checked').length==2){
                flag='all'
            }
            if ($('input[name= checkbox]:checked').length==1){
                $('input[name= checkbox]:checked').each(function(){
                    flag = $(this).val();
                })
            }
            if ($('input[name= checkbox]:checked').length==0){
                flag='null'
            }
            $.ajax({
                type: 'get',
                url: '/doctors/get_patients?flag='+flag,
                data: 'json',
                success: function(data){
                    $('#relation_patient').html(data)
                }
            })
        })
    })


</script>