<div class="container bgcolor-white" style="margin-top:-20px;">
  <div class="row space">
    <div class="col-md-2  col-sm-3 space2">
      <%= render 'photos/photo_form' %>
      <%#= render  partial: 'notifications/show_notifications'%>
      <div id='notice'></div>
    </div>
    <!--首页提醒-->
    <div class="col-md-10  col-sm-6 space2" style="padding-left:0;" id="doctor-home-notices">


    </div>
  </div>

</div>
<div class="modal fade" id="flashalert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <% flash.each do |key, value| %>
          <div class="modal-body" id="alert<%= key %>">
            <%= value %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<script>

    $.ajax({
        type:'get',
        url:'notifications/show_doctor_notices',
        success:function(data){
            $('#doctor-home-notices').html(data)
        },
        error:function(data){
        }
    })


    function showflash() {
        $('#flashalert').modal('show');
    }
    function hideflash() {
        $('#flashalert').modal('hide');
    }
    <% if flash[:success] %>
    jQuery(document).ready(function () {
        setTimeout("showflash()", 1);
        setTimeout("hideflash()", 1500)
    });
    <% end %>
</script>
