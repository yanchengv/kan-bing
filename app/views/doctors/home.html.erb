<style>
    #div1_photo {
        display:none;
    }
</style>
<div class="container" style="margin-top:-20px;">
  <div class="row space">
    <div class="col-md-12 " style="margin-top:10px;padding:0px;">
      <div class="pull-left col-md-3 col-sm-4 col-xs-6 " style="width:13%;padding:0px;">
        <%= render 'photos/photo_form' %>
        <div id='notice'></div>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-6" id="doctor-home-notices" style="width:87%;padding:0px 0px 0px 10px;">

      <%#= render  partial: 'notifications/show_notifications'%>
      <%= render partial: 'doctors/education_video'%>
      </div>
  </div>
  </div>
</div>
<div class="modal fade" id="flashalert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <% flash.each do |key, value| %>
          <div class="modal-body" id="alert<%= key %>">
            <%= value %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<script>


    $.ajax({
        type:'get',
        url:'/notifications/get_doc_notices',
        success:function(data){
            $('#notice').html(data)
        },
        error:function(data){
        }
    })


//    $.ajax({
