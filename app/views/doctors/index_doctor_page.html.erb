        <li>
          <span class="user_subpage_font font-yahei"><strong>专长 <%#=t('users.user_home_aspects.skilled') %></strong></span><%= @doctor.expertise %>
        </li>
        <li>
          <span class="user_subpage_font font-yahei"><strong>简介 <%#=t('.introduction') %></strong></span><%= @doctor.introduction %>
        </li>
      </ul>
    </div>
  </div>
</div>
