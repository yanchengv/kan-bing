
<!--血脂 title end-->
<div class="box-title" style="padding-left:15px">
  <p class="pull-left"><strong><span class="font-18 font-yahei ">血脂</span><span class="font-12">(mmol/L)</span></strong> </p>
  <% if current_user.doctor_id.nil?%>
      <p class="pull-right" data-toggle="modal" data-target="#blood_fat_modal2" style="cursor:pointer;">
        <strong style="border-left:1px solid #d7d7d7;color:#ababab;font-size:30px;width:45px;display:inline-block;text-align:center;cursor:pointer;">+</strong></p>
  <%end%>
</div>
<!--血脂 数据不为空时的显示-->
<div id="blood_fat_container3" style="width:98%;height:400px;display:''"></div>
<!--正在加载数据或者数据为空时的默认显示样式-->
<div id="blood_fat_container4" style="width:98%;height:400px;display:none">
  加载中...
</div>

<!-- 血脂添加 Modal start -->
<div class="modal fade" id="blood_fat_modal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">添加记录</h4>
      </div>
      <form  action="blood_fat/create" name="blood_fat_form2" method="post" id="blood_fat_form2">
        <div class="modal-body">
          <table style="width:100%;margin:0px auto;">
            <tr>
              <input type="hidden" name="patient_id" value="<%= current_user.patient_id%>">
              <td style="padding-right:5px;width:20%"><span class="font-yahei" style="color:#333;">总胆固醇(mmol/L)</span></td>
              <td style="padding-right:5px;"><input type="text" name="total_cholesterol" id="total_cholesterol2" class="blood_input_bg" style="margin-top:5px;"/></td>
            </tr>
            <tr>
              <td style="padding-right:5px;"><span class="font-yahei" style="color:#333;">甘油三酯(mmol/L)</span></td>
              <td style="padding-right:5px;"><input type="text" name="triglyceride" id="triglyceride2" class="blood_input_bg" style="margin-top:5px;"/></td>
            </tr>
            <tr>
              <td style="padding-right:5px;"><span class="font-yahei" style="color:#333;">高密度脂蛋白(mmol/L)</span></td>
              <td style="padding-right:5px;"><input type="text" name="high_lipoprotein" id="high_lipoprotein2" class="blood_input_bg" style="margin-top:5px;"/></td>
            </tr>
            <tr>
              <td style="padding-right:5px;"><span class="font-yahei" style="color:#333;">低密度脂蛋白(mmol/L)</span></td>
              <td style="padding-right:5px;"><input type="text" name="low_lipoprotein" id="low_lipoprotein2" class="blood_input_bg" style="margin-top:5px;"/></td>
            </tr>
            <tr>
              <td style="padding-right:5px;"><span class="font-yahei" style="color:#333;">时间</span></td>
              <td style="padding-right:5px;"><input type="text" name="measure_time" id="blood_fat_measure_time2" class="blood_input_bg" style="margin-top:5px;" readonly="readonly"></td>
            </tr>
          </table>
        </div>
        <div class="modal-footer" style="padding:10px 20px 10px;">
          <input type="submit" value="保存" class="btn btn_g" style="margin-bottom:2px;" id="blood_fat_submit2">
        </div>
      </form>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div>
<!-- 血脂添加/.modal end -->



