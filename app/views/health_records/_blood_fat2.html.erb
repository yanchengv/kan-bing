<script type="text/javascript">
    //时间控件
    var nowDate = new Date();
    nowDate=nowDate.getFullYear()+'/'+(nowDate.getMonth()+1)+'/'+nowDate.getDate();
    $('#blood_fat_measure_time2').datetimepicker({
        lang:'ch',
        value: nowDate,
        timepicker:false,
        format:'Y-m-d'
    });

//ajax 添加后的响应
    function pressurefatResponse2(responseText, statusText, xhr, $form) {
        $('#blood_fat_modal2').modal('hide');
//        更新数据
        $.ajax({
            type:'get',
            url:'/blood_fat/all_blood_fat',
            success:function(data){
                document.getElementById('blood_fat_container4').style.display='none';
                document.getElementById('blood_fat_container3').style.display="";
                bloodfatChart2.series[0].setData(prepare(data['blood_fat_data']['total_cholesterol_data']))
                bloodfatChart2.series[1].setData(prepare(data['blood_fat_data']['triglyceride_data']))
                bloodfatChart2.series[2].setData(prepare(data['blood_fat_data']['high_lipoprotein_data']))
                bloodfatChart2.series[3].setData(prepare(data['blood_fat_data']['low_lipoprotein']))
            }
        })
    }
    ;

    //ajax 修改后的响应
    function pressurefatUpdateResponse2(responseText, statusText, xhr, $form) {
        $('#blood_fat_modal2_update').modal('hide');
//        更新数据
        $.ajax({
            type:'get',
            url:'/blood_fat/all_blood_fat',
            success:function(data){
                document.getElementById('blood_fat_container4').style.display='none';
                document.getElementById('blood_fat_container3').style.display="";
                bloodfatChart2.series[0].setData(prepare(data['blood_fat_data']['total_cholesterol_data']))
                bloodfatChart2.series[1].setData(prepare(data['blood_fat_data']['triglyceride_data']))
                bloodfatChart2.series[2].setData(prepare(data['blood_fat_data']['high_lipoprotein_data']))
                bloodfatChart2.series[3].setData(prepare(data['blood_fat_data']['low_lipoprotein']))
            }
        })
    }
    ;
    function pressurefatError2(data){
        $('#blood_fat_modal2').modal('hide');
    }

    function pressurefatUpdateError2(data){
        $('#blood_fat_modal2_update').modal('hide');
    }
    // ajax 血脂添加 提交
    $('#blood_fat_submit2').click(function(){
        var options={
            url:'/blood_fat/create',
            type:'post',
            data: $('#blood_fat_form2').serialize(),
            success: pressurefatResponse2,
            error: pressurefatError2

        };
        $.ajax(options);
        return false;
    });

    // ajax 血脂修改 提交
    $('#blood_fat_submit2_update').click(function(){
        var options={
            url:'/blood_fat/update',
            type:'post',
            data: $('#blood_fat_form2_update').serialize(),
            success: pressurefatUpdateResponse2,
            error: pressurefatUpdateError2

        };
        $.ajax(options);
        return false;
    });
</script>
<%= javascript_include_tag 'highcharts/blood_fat2'%>
