        </tr>

         <% if !@pressure_data_left.empty?%>
            <% @pressure_data_left.each do |data_left|%>
        <tr style="border-bottom:1px dashed #a2a2a2">
          <td style="border-right:1px dashed #a2a2a2"><%=data_left.measure_date %></td>
          <td style="border-right:1px dashed #a2a2a2"><%=data_left.systolic_pressure %></td>
          <td style="border-right:2px solid #348fa4"><%=data_left.diastolic_pressure %></td>
        </tr>
         <%end%>
        <%end%>
