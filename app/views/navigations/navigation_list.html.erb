<!-- Modal -->
<% %w[1 2 3 ].each do |num|%>
    <div class="modal fade" id="myModal<%=num%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title font-color3"><b><%= t('.user_login') %></b></h4>
          </div>
          <div class="modal-body">
            <%= form_for :session, :url => { :action => "signed_mini",:controller=>"navigations",:flag => num}  do |f| %>
                <div class="form-group">
                  <label for="inputUsername" class="col-md-3 control-label text-right"><%= f.label :username, t('.username')%></label>
                  <div class="col-md-9">
                    <%= f.text_field :username, :class=> 'form-control',:placeholder=>"用户名",:id=>"inputUsername"%>
                  </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group space space2">
                  <label for="inputPassword3" class="col-md-3 control-label text-right"><%= f.label :password, t('.password')%></label>
                  <div class="col-md-9">
                    <%= f.password_field :password, :class=> 'form-control',:placeholder=>"密码",:id=>"inputPassword"%>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-md-9 col-md-offset-3">
                    <%= link_to t('.forget_password'), "/find_pwd_types" %>
                  </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                      <%= f.submit t('.sign_in'), class: "btn btn-warning"%>
                    </div>
                </div>
                <div class="clearfix"></div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
<% end %>