<div class="clear"></div>
<div style="height:40px;"></div>
<div class="health_record_box">
  <h3 class="consultation_title">管理会诊
    <% if !current_user.doctor.nil? %>
        <form action="/consultations/new" method="get" style = "margin-right:10px;" class="pull-right">
          <%= tag("input", :type => 'submit', :value => "新建会诊" ,:class => "consultatiaon_form btn btn-mini")%>
        </form>
    <% end %>
  </h3>
  <div class="myapp_tab">

    <p style="font-weight:bold;color:#2b5780;padding-left:20px;">我的会诊</p>

    <%if !@cons_record.nil? && !@cons_record.empty?%>
        <table class="table table-bordered">
          <thead>
          <tr>
            <th>会诊标题</th>
            <th>参与患者</th>
            <th>主治医生</th>
            <th>会诊医生</th>
            <th>会诊状态</th>
            <th>计划时间</th>
            <th>开始时间</th>
            <th>结束时间</th>
            <th>会诊管理</th>
          </tr>
          </thead>
          <%= render partial: 'consultations/cons_record_item', collection: @cons_record,:as => :item %>
        </table>
    <%end%>

    <% if !current_user.doctor.nil? %>
        <p style="font-weight:bold;color:#2b5780;padding-left:20px;">我的会诊邀请</p>

        <%if !@invited_consultations.nil? && !@invited_consultations.empty?%>
            <table class="table table-bordered">
              <thead>
              <tr>
                <th>会诊标题</th>
                <th>主治医生</th>
                <th>计划时间</th>
                <th>邀请管理</th>
              </tr>
              </thead>
              <%= render partial: 'consultations/invited_item', collection: @invited_consultations,:as => :item %>
            </table>
        <%end%>

    <% end %>
  </div>


</div>






