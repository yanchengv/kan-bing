          <!--批量处理菜单 end-->
          <hr style="margin-top:0px;"/>
          <table width="100%" class="lineheight-24 font-yahei">
              <tbody>
                <% @notes.each do |note| %>
                  <tr>
                    <td><input type="checkbox"></td>
                    <td class="font-yahei"><span class="pull-right color">2014-08-12</span><%= note.head %></td>
                    <td class="tb text-right"><%= link_to '查看', note %> | <%= link_to '编辑', edit_note_path(note) %> | <%= link_to '删除', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <div class="text-center">
          <ul class="pagination">
