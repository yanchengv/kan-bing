<div class="container" style="margin-top:-10px;">
  <div class="row space">
    <div class="col-md-9 col-sm-7 col-xs-12" style="padding:0px;width:80%;">
      <div class="index_box"  style="padding-bottom:10px;">
        <div class="box-title" style="padding-left:15px">
          <p>
            <strong class="font-18 font-yahei">我的文章</strong></p>
        </div>
        <div class="col-md-12">
          <button class="btn btn-lg btn-primary wr" style="margin-top:10px;margin-bottom:10px;"><span class="glyphicon glyphicon-align-justify" style="margin-right:8px;"></span><%= link_to '写文章', new_note_path%></button>
          <button class="btn btn-lg btn-primary wr" style="margin-top:10px;margin-bottom:10px;"><%= link_to '退出批量管理', new_note_path%></button>
          <!--批量处理菜单-->
          <hr style="margin-bottom:10px;"/>
          <span class="checkbox pull-left font-yahei" style="margin-top:0px;">
              <input type="checkbox"> 全选
          </span>
