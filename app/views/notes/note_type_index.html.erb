<%= javascript_include_tag 'notes'%>
<style>.wr a{font-size:18px;color:#ffffff;font-family:"Microsoft YaHei",Arial;}.color{color:#999999;}.tb a{color:#2d699f;}</style>
<div class="container" style="margin-top:-10px;">
  <div class="row space">
    <div class="col-md-9 col-sm-7 col-xs-12" style="padding:0px;width:80%;">
      <div class="index_box"  style="padding-bottom:10px;">
        <div class="box-title" style="padding-left:15px">
          <p>
            <strong class="font-18 font-yahei">我的文章</strong></p>
        </div>
        <div class="col-md-12">
          <a onclick="show_add_type()">添加</a>
          <%= link_to '返回文章列表', notes_path %>
          <hr style="margin-top:10px;margin-bottom: 10px;"/>
          <table width="100%" class="lineheight-24 font-yahei">
              <tbody>
              <tr>
                <td></td>
                <td class="font-yahei"><span class="pull-right color"></span>类型名称
                </td>
                <td class="tb text-right">操作</td>
              </tr>
                <% @note_types.each do |note_type| %>
                  <tr>
                    <td></td>
                    <td class="font-yahei" style="background-color: red;"><span class="pull-right color"></span><%= link_to note_type.name, note_type %></td>
                    <td class="tb text-right" style="background-color: green;"><%= link_to '编辑', edit_note_type_path(note_type) %> | <%= link_to '删除', note_type, method: :delete, data: { confirm: '确定删除?' } %></td>
                  </tr>
                <% end %>
              <tr id="add_note_type" style="display: none">
                <td></td>
                <td class="font-yahei" style="background-color: yellow;"><span class="pull-right color"></span>
                  <%= form_for (NoteType.new), url: {action: 'create', controller: 'note_types'} do |f| %>
                                <%= f.hidden_field :create_by_id, id: 'note_type_doctor_id', value: '' %>
                                <%= f.hidden_field :source_by, value: '1' %>
                              类型名称: <%= f.text_field :name %>
                              <button type="button"  onclick="cel_show()">取消</button>
                              <%= f.submit "保存"  %>
                  <% end %>
                </td>
                <td class="tb text-right" style="background-color: blue;">&nbsp;</td>
              </tr>
              </tbody>
            </table>
          <!--<div class="text-center">-->
            <div class="text-center"><%= will_paginate @note_types, :previous_label => '<', :next_label => '>', :class => 'pagination-mini page num unstyled' %></div>
