<div class="container" style="margin-top:-20px;">
  <div class="row space">
    <div class="col-md-12 " style="margin-top:10px;padding:0px;">
      <div class="pull-left col-md-3 col-sm-4 col-xs-6 " style="width:13%;padding:0px;">
        <%= render 'photos/photo_form' %>
        <div id='notice'></div>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-6" id="doctor-home-notices" style="width:87%;padding:0px 0px 0px 10px;">
        <div class="index_box"  style="padding-bottom:10px;">
          <div class="box-title" style="padding-left:15px">
            <p class="pull-left"><strong><span class="font-18 font-yahei "><%= @note.head %></span></strong> </p>
          </div>

           <div class="col-md-12" style="padding-left:50px;padding-right:50px;">
                  <p id="notice"><%= notice %></p>

                  <h1 class="text-center font-yahei font-24"><strong><%= @note.head %></strong></h1>

                  <p class="text-center font-yahei font-18"><strong><%= @note.subhead %></strong></p>

                  <p class="lineheight-30"><%= @note.content %></p>

                  <div class="text-center">
                    <button class="btn btn-success"><span class="glyphicon glyphicon-pencil" style="margin-right:5px;"></span><%= link_to '编辑', edit_note_path(@note) %></button>
                    <button class="btn btn-default"><span class="glyphicon glyphicon-share-alt" style="margin-right:5px;"></span><%= link_to '返回', notes_path %></button>
                  </div>

           </div>

      </div>



      </div>
    </div>
  </div>
</div>

