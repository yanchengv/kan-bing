<div class="container bgcolor-white" style="margin-top:-20px;">

  <div class="home_frients_doctors_box">
    <h3><span class="title_img">/</span>请求</h3>
    <div class="friends_list">
      <%if !@friends_notice.empty?%>
          <div class="request_box" style="width:100%;">
            <%@friends_notice.each do |notice|%>
                <% @is_friends=false %>
                <% @notice = notice %>

                <div style="border-bottom:1px #dcdcdc dashed;padding:10px 0;">
                  <div class="pull-left" style="font-size:12px;">
                    <% if notice['code'].to_i == 3 %>
                        <% @is_friends = DoctorFriendship.is_friends(current_user.doctor_id,notice['content']) %>
                        <%=link_to image_tag('default.png',size:"15x21")+"#{@notice['description']} ",{controller:"doctors",action: "doctor_page",id:"#{@notice['content']}"}%> 请求添加您为好友
                    <% elsif notice['code'].to_i == 4 || notice['code'].to_i == 7 %>
                        <% @is_friends = TreatmentRelationship.is_friends(current_user.doctor_id,notice['content']) %>
                        <%=link_to image_tag('default.png',size:"15x21")+"#{@notice['description']} ",{controller:"patients",action: "patient_page",id:"#{@notice['content']}"}%> 请求添加您为好友
                    <% end %>
                  </div>
                  <div class="pull-left">
                    <% if @is_friends %>
                        <div class="btn btn-default btn-xs pull-left"><%= link_to "删除消息", {controller: 'notifications',action: 'reject_or_delete_notice',content:@notice['content'],code:@notice['code'],notice_id:@notice['id']},method: :delete%></div>
                    <% else %>
                        <div class="question_btn pull-left" style="padding:0px 5px;"><%= link_to "接受", {controller: 'notifications',action: 'agree_request',content:@notice['content'],code:@notice['code'],notice_id:@notice['id']},method: :post %></div>
                        <div class="question_btn pull-left space_4"><%= link_to "拒绝", {controller: 'notifications',action: 'reject_or_delete_notice',content:@notice['content'],code:@notice['code'],notice_id:@notice['id']},method: :delete%></div>
                    <% end %>
                  </div>
                </div>
            <%end%>
            <div>
            </div>
          </div>
      <%end%>
    </div>
    <div class="clear">
    </div>

  </div>
  <div class="clear"></div>

</div>

<div class="clear"></div>

