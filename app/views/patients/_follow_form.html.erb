<% if @is_friends%>
    <%= form_for('patient', :url =>'' ) do |f| %>
        <%= f.hidden_field :user_id, { :value => @patient_id } %>
        <%= f.submit '删除好友', class: "del_btn" ,style:"padding-left:0px;padding-right:0px;"%>
    <% end %>
<% else %>
    <%= form_for('patient', :url =>'' ) do |f| %>
        <%= f.hidden_field :user_id, { :value => @patient_id } %>
            <%= f.submit '添加为我的患者',style:"padding-left:0px;padding-right:0px;",:id=>"add1",:class=>"add_btn space",:confirm => "发送成功，等待确认"%>
            <%= f.submit '添加为主治患者',style:"padding-left:0px;padding-right:0px;",:id=>"add2",:class=>"add_btn space",:confirm => "发送成功，等待确认"%>
    <% end %>
<% end %>


