<% if @is_friends%>
    <%= form_for('patient', :url =>'' ) do |f| %>
        <%= f.hidden_field :user_id, { :value => @patient_id } %>
        <%= f.submit '删除好友', class: "btn btn-warning btn-xs" %>
    <% end %>
<% else %>
    <%= form_for('patient', :url =>'' ) do |f| %>
        <%= f.hidden_field :user_id, { :value => @patient_id } %>
            <%= f.submit '添加为我的患者',:id=>"add1",:class=>"btn btn-info",:confirm => "发送成功，等待确认"%>
            <%= f.submit '添加为主治患者',:id=>"add2",:class=>"btn btn-primary",:confirm => "发送成功，等待确认"%>
    <% end %>
<% end %>


