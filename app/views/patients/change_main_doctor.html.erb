<div class="container bgcolor-white" style="margin-top:-20px;">
<h3 class="font-yahei title-bg font-18"><span class="icon-title"></span>医生</h3>
    <%if !@doctor_users.empty?%>

        <% @doctor_users.each do |doctor| %>
          <div class="row line3 space2">
          <div class='col-md-1 space'>
              <a href="/doctors/doctorpage/<%=doctor['id']%>">
              <% if !doctor['photo'].empty? && !doctor['photo']=''%>
                  <%=image_tag(doctor['photo'], alt: doctor['photo'],:width => "75",:height => "105" , :class => "pull-left" ) %>
              <% else %>
                  <%=image_tag("default.png", alt: 'default',:width => "75",:height => "105" , :class => "pull-left" ) %>
              <%end%>
              </a>
          </div>
        <div class="col-md-11">
          <ul class="list-unstyled lineheight-30">
            <li><span class="font-18 font-yahei font-color3 pull-left"><strong><%=doctor['name'] %></strong>&nbsp;</span>
              <span class="pull-left"><%= doctor['hospital']['name'] unless doctor['hospital'].nil?%>&nbsp;</span>
              <span class="pull-left"><%=doctor['department']['name'] unless doctor['department'].nil?%></span>
            </li>
            <div class="clearfix"></div>
            <!--<li class="lineheight-24"><strong>医院 <%#=t('users.user_home_aspects.hospital') %></strong><%#= doctor['hospital']['name'] unless doctor['hospital'].nil?%></li>-->
            <!--<li class="lineheight-24"><strong>科室 </strong><%#=doctor['department']['name'] unless doctor['department'].nil?%></li>-->
            <li><strong>专长 </strong><%#=t('users.user_home_aspects.skilled') %><%= doctor['expertise']%></li>
            <li><strong>说明 </strong><%#=t('.introduction') %><%= doctor['introduction'] %></li>
          </ul>
        </div>
        </div>
       <% end %>
        <%#= will_paginate @doctor_users,:previous_label => '<', :next_label => '>',:class=>' pagination-mini page unstyled' %>
      <ul class="pagination">
        <% if !@current_page.nil? && @current_page.to_i>1 %>
            <li><a href="/patients/change_main_doctor?page=<%=@current_page.to_i-1%>">&laquo;</a></li>
        <% else %>
            <li class="disabled"><a href="#">&laquo;</a></li>
        <% end %>
        <% total_page = @doc_count %>
        <% i=1 %>
        <% while i<=total_page %>
            <li><a href="/patients/change_main_doctor?page=<%=i%>"><%=i %> <span class="sr-only">page</span></a></li>
            <% i = i+1 %>
        <% end %>
        <% if !@current_page.nil? && @current_page.to_i<total_page %>
            <li><a href="/patients/change_main_doctor?page=<%=@current_page.to_i+1%>">&raquo;</a></li>
        <% elsif @current_page.nil? && @doc_count>1%>
            <li><a href="/patients/change_main_doctor?page=2">&raquo;</a></li>
        <% else %>
            <li class="disabled"><a href="#">&raquo;</a></li>
        <% end %>
      </ul>
    <% end %>
</div>
  <script>
      $(function () {
          $('.pagination-mini a').on("click", function () {
              $.get(this.href, null, null, 'script');
              return false;
          });
      });
  </script>