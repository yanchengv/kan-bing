<style>
    #div1_photo {
        display:none;
    }
</style>


<%= javascript_include_tag 'highstock','exporting','highchartsGrigTheme'%>

<div id="container" style="width:600px;height:600px"></div>



<div class="container" style="margin-top:-20px;">
  <div class="row space">
    <div class="col-md-12 " style="margin-top:10px;padding:0px;">
      <div class="col-md-3 col-sm-4 col-xs-6" style="width:13%;padding:0">
        <%= render 'photos/photo_form'%>
      </div>
      <div class="col-md-9 col-sm-8 col-xs-6" id="patient-home-notices" style="width:87%;padding:0 0 0 10px;">
      </div>
    </div>
  </div>
</div>
<div class="modal fade" id="flashalert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <% flash.each do |key, value| %>
          <div class="modal-body" id="alert<%= key %>">
            <%= value %>
          </div>
      <% end %>
    </div>
  </div>
</div>
<script>
    $(function() {

        $.getJSON('http://www.highcharts.com/samples/data/jsonp.php?filename=aapl-c.json&callback=?', function(result) {
            // Create the chart
            $('#container').highcharts('StockChart', {

                rangeSelector : {
                    selected : 1
                },

                title : {
                    text : 'AAPL Stock Price'
                },

                series : [{
                    name : 'AAPL',
                    data : result,
                    tooltip: {
                        valueDecimals: 2
                    }
                }]
            });
        });

    });


    $.ajax({
        type:'get',
        url:'/notifications/show_patient_notices',
        success:function(data){
            $('#patient-home-notices').html(data)
        },
        error:function(data){

        }
    })
    function showflash() {
        $('#flashalert').modal('show');
    }
    function hideflash() {
        $('#flashalert').modal('hide');
    }
    <% if flash[:success] %>
    jQuery(document).ready(function() {
        setTimeout("showflash()",1);
        setTimeout("hideflash()",1500);
    });
    <% end %>
</script>
