<%#= javascript_include_tag 'highstock','highchartsGrigTheme'%>
<div class="container" style="margin-top:-20px;">
  <div class="row space">
    <div class="col-md-12 " style="margin-top:10px;padding:0px;">
      <div class="col-md-3 col-sm-4 col-xs-6" style="width:13%;padding:0">
        <%#= render 'photos/photo_form'%>
         <%= image_tag @photos,:style=> "border-radius: 3px;border:1px solid #e5e5e5;"%>
        <!--<div id='notice'></div>-->
      </div>
      <div class="col-md-9 col-sm-8 col-xs-6" id="patient-home-notices" style="width:87%;padding:0 0 0 10px;">

        <div class="row" id="blood_pressure" style="padding-left:15px;padding-right:15px;">
          <div id="collapseTwo" class="index_box collapse" style="margin-bottom:10px;">
            <div class="box-title" style="padding-left:15px;">
              <p class="pull-left"><strong><span class="font-18 font-yahei ">血压所有记录</span></strong> </p>
              <button type="button" class="close" data-dismiss="blood_pressure" aria-hidden="true" style="margin-top:10px;margin-right:15px;">&times;</button>
            </div>
            <table style="width:95%;margin:10px auto;" class="table">
              <tr>
                <td style="border-top:0px;">数值</td>
                <td style="border-top:0px;">日期</td>
                <td style="border-top:0px;">时间</td>
              </tr>
              <tr>
                <td>4.9mmHg</td>
                <td>2014/4/12</td>
                <td>09:32 AM</td>
              </tr>
            </table>
          </div>

        </div>
        <div class="row">
          <!--血糖-->
          <div class="col-md-6 col-sm-12 col-xs-12" style="padding-right:5px;">
            <div id="blood-div" class="index_box" style="padding-bottom:20px;">
            <%= render partial: 'health_records/blood_glucose'%>
            </div>
          </div>

          <!--血糖 end-->
          <div class="col-md-6" style="padding-left:5px;">
            <div id="blood-div" class="index_box" style="padding-bottom:20px;">
              <%= render partial: 'health_records/blood_pressure'%>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>


<div class="modal fade" id="flashalert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

  <div class="modal-dialog">
    <div class="modal-content">
      <%# flash.each do |key, value| %>
          <!--<div class="modal-body" id="alert<%#= key %>">-->
            <%#= value %>
          <!--</div>-->
      <%# end %>


    </div>
  </div>
</div>

<script>
    $.ajax({
        type:'get',
        url:'/notifications/get_pat_notices',
        success:function(data){
            $('#notice').html(data)
        },
        error:function(data){
        }
    })

</script>

