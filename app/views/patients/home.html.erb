<div class="container bgcolor-purple" style="margin-top:-20px;">
  <h3 class="font-yahei title-bg font-18"><span class="icon-title"></span>患者主页面</h3>
  <div class="row space">
    <div class="col-md-3">
      <%= render 'photos/photo_form'%>
    </div>
    <div class="col-md-7">
      <h3><%=@user['name'] %></h3>
      <div><%=@user['address'] %></div>
      <div><%=@user['email'] %></div>
    </div>
    <div class="col-md-2" id="friend_aspect">
    </div>
  </div>

</div>
<script>
    $.ajax({
        type: 'get',
        url: '/patients/get_aspects',
        data: 'json',
        success: function (data) {
            $('#friend_aspect').html(data)
        },
        error: function (data) {
            console.log(data)
        }
    })
</script>
