                </ul>
              </div>
            </div>
        <% end%>
        <%= will_paginate @contact_doctors,:previous_label => '<', :next_label => '>',:class=>'pagination-mini page num unstyled',:style=>'margin-left:300px;margin-bottom:40px;' %>

    <%end%>
  </div>
</div>