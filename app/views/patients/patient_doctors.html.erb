                  <% else %>
                      <%=image_tag("default.png", alt:"default",:width => "75",:height => "105",:class =>"img_bg" )%>
                  <%end%>
                </a>
              </div>
              <div class="col-md-11">
                <ul class="list-unstyled lineheight-30">
                  <li><span class="pull-left"><strong><%=link_to "#{con_doc.name}","/doctors/doctorpage/#{con_doc.id}",:class=>"font-18 font-yahei font-color3" %>&nbsp;</strong></span>
                    <span class="pull-left"><%=con_doc.hospital.name unless (con_doc.hospital_id.nil? || con_doc.hospital_id == '')%>&nbsp;<%=con_doc.department.name unless (con_doc.department_id.nil? || con_doc.department_id == '')%></span>
                    <div class="clearfix"></div>
                  </li>
                  <li><strong>专长 <%#=t('appointments.doctors_list.skilled') %></strong><%=con_doc.expertise%></li>
