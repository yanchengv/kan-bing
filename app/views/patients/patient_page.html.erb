<div class="container" style="margin-top:-20px;">
  <div class="row space">
    <div class="col-md-4" style="margin-top:10px;">
      <div class="row padding_right">
        <div class="col-md-12 index_box" style="">

          <div class="" style="margin-top:15px;margin-bottom:15px;">
            <div style="width:110px;margin-right:15px;" class="pull-left">
              <% if !@patient1.photo.empty? && !@patient1.photo='' %>
                  <%= image_tag(Settings.pic+@patient1.photo, alt: @patient1['photo'], :width => "110", :height => "154", :class => "pull-left space3") %>
              <% else %>
                  <%= image_tag("default.png", alt: "default", :width => "110", :height => "154", :class => "pull-left space3") %>
              <% end %>
              <%= render 'follow_form' %>
            </div>
            <ul class="list-unstyled pull-left font-yahei" style="color:#7d7d7d;line-height:27px">
              <li>
                <span class="font-yahei" style="font-weight:bold;font-size:16px;color:#464646;"><%= @patient1['name'] %></span>
              </li>
              <% if !@patient1.birthday.nil? %>
                  <li><span><%= Time.now.year-@patient1.birthday.year %>岁</span><span><%= @patient1.gender %></span>
                  </li>
              <% end %>
              <li><span><%= @patient1.mobile_phone %></span></li>
              <li><span><%= @patient1.address %></span></li>
              <li><span><%= @patient1.diseases_type %></span></li>
              <li><span>最近诊疗时间 <%= @patient1.last_treat_time %></span></li>
            </ul>

            <div class="clearfix"></div>
          </div>


        </div>
      </div>
    </div>
    <div class="col-md-8">
      主页
    </div>
    <%#= render partial: 'patients/patient_page_aspects' %>
  </div>

  <div class="modal fade" id="flashalert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <% flash.each do |key, value| %>
            <div class="modal-body" id="alert<%= key %>">
              <%= value %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
    function showflash() {
        $('#flashalert').modal('show');
    }
    function hideflash() {
        $('#flashalert').modal('hide');
    }
    <% if flash[:success] %>
    jQuery(document).ready(function () {
        setTimeout("showflash()", 1);
        setTimeout("hideflash()", 1500);
    });
    <% end %>
</script>
