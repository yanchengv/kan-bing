<style>
  .margin_right{
      margin-right:0px;
  }
  .margin_left{
      margin-left:0px;
  }
        @media (max-width:1005px){
            .margin_right{
                margin-right:-15px;
            }
            .margin_left{
                margin-left:-15px;
            }
            .age{
                height:222px;
                padding-top:90px;
                border-left:1px solid #d1d1d1;
            }
            .weight,.blood{
                height:222px;
                padding-top:90px;
            }
            .basic_info{
                border-top:1px solid #d1d1d1;
                border-left:0px;
            }
            .blood{
                border-right-width:0px;
                border-left:1px solid #d1d1d1;
            }
            .blood_b{
                border-bottom:1px solid #d1d1d1;
            }
        }
</style>
<div class="container" style="margin-top:-20px;">
  <div class="row">
    <div class="col-md-12" style="margin-top:10px;">
      <div class="row page_bg ">
        <div class="col-md-6" style="padding-top:20px;">
          <div class="row">
            <div class="col-md-4 col-xs-3 col-sm-3">
              <% if !@patient1.photo.empty? && !@patient1.photo='' %>
                  <%= image_tag(Settings.pic+@patient1.photo, alt: @patient1['photo'], :width => "140", :height => "195",:style=> "border-radius:3px;border: 1px solid #e5e5e5;", :class => "pull-left space3") %>
              <% else %>
                  <%= image_tag("default.png", alt: "default", :width => "140", :height => "195",:style=> "border-radius:3px;border: 1px solid #e5e5e5;", :class => "pull-left space3") %>
              <% end %>

            </div>
            <div class="col-md-8 col-xs-9 col-sm-9" style="">
              <ul class="list-unstyled pull-left " style="font-family:'幼圆','楷体','simsun','microsoft yahei';font-size:14px;line-height:27px;color:#8f8f8f;">
                <li>
                  <span class="font-yahei" style="font-family:'microsoft yahei';font-weight:bold;font-size:32px;color:#333;margin-right:10px;"><%= @patient1['name'] %></span>

                </li>
                <li>
                  <% if !@patient1.birthday.nil? %>
                      <span><%#= Time.now.year-@patient1.birthday.year %></span><span><%= @patient1.gender %></span>
                      <span><%= @patient1.mobile_phone %></span>
                  <% end %>
                  <span><%= @patient1.address %></span>
                </li>
                <li>
                  <span><b class="font-14" style="color:#333 ;margin-right:10px;">疾病类型</b><%= @patient1.diseases_type %></span>
                </li>
                <li>
                  <span><b class="font-14" style="color:#333 ;margin-right:10px;">最近诊疗时间</b><%= @patient1.last_treat_time %></span>
                </li>
                <li>
                    <span style="margin-right: 10px"><b class="font-14" style="color:#333;margin-right:10px; ">过敏史</b>青霉素过敏</span>

                    <span><b class="font-14" style="color:#333 ;margin-right:10px;">预防接种史</b>乙肝接种</span>
                </li>
                <li>
                    <span style="margin-right: 10px"><b class="font-142" style="color:#333;margin-right:10px; ">既往病史</b>心脏病</span>

                  <span><b class="font-14" style="color:#333;margin-right:10px; ">家族遗传病史</b>无</span>
                </li>
                <li>
                  <%= render 'follow_form' %>
                </li>
              </ul>

            </div>

          </div>
        </div>
        <div class="col-md-6 ">
          <div class="row basic_info">
            <div class="col-md-8">
              <div class="row b_line">
              <div class="blood col-md-4 col-xs-4 col-sm-4 text-center"  style="">
                <span class="font-yahei font-12" style="color:#959595;">血型</span><br />
                <span class="font-yahei" style="font-size:24px;font-weight:bold;">AB</span>
              </div>
              <div class="age col-md-4 col-xs-4 col-sm-4 text-center" style="border-right:1px solid #d1d1d1;">
                <span class="font-yahei font-12" style="color:#959595;">年龄</span><br />
                <% if !@patient1.birthday.nil? %>
                    <span class="font-yahei" style="font-size:24px;font-weight:bold;"><%= Time.now.year-@patient1.birthday.year %></span>
                <% end %>
              </div>
              <div class="weight col-md-4 col-xs-4 col-sm-4 text-center" >
                <span class="font-yahei font-12" style="color:#959595;">体重（kg）</span><br />
                <span class="font-yahei" style="font-size:24px;font-weight:bold;">63.0</span>
              </div>
             </div>
              <div class="row" style="border-bottom:1px solid #d1d1d1;padding:13px 5px;">
                <div class="col-md-4 col-sm-4 col-xs-4">
                 <span style="font-size:12px;color:#959595;">血压</span><br />
                 <b style="font-size:14px;color:#464646;">104/79 mmHg</b>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4" style="padding-left:0px;">
                  <!--进度条-->
                  <div class="normal_line" id="pro">
                    <div class="font1 font-12">平均值</div>
                    <div class="line"></div>
                    <div class="font2 font-12">(收缩压)</div>
                    <div class="bar_bg">
                      <div id="bar">
                        <div class="bar_inner">
                          <div class="bar"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--进度条 结束-->
                </div>
                <div class="col-md-4 col-sm-4 col-xs-4" style="padding-left:0px;">
                  <!--进度条-->
                  <div class="normal_line" id="pro">
                    <div class="font1 font-12">平均值</div>
                    <div class="line"></div>
                    <div class="font2 font-12">(舒张压)</div>
                    <div class="bar_bg">
                      <div id="bar2">
                        <div class="bar_inner">
                          <div class="bar"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--进度条 结束-->
                </div>
              </div>
              <div class="row  blood_b" style="padding:10px 5px;">
                <div class="col-md-4 col-sm-4 col-xs-4">
                  <span style="font-size:12px;color:#959595;">血糖</span><br />
                  <b style="font-size:14px;color:#464646;">5.5mmol/L</b>
                </div>
                <div class="col-md-8 col-sm-8 col-xs-8" style="padding-left:0px;">
                  <!--进度条-->
                  <div class="normal_line" id="pro">
                    <div class="font1 font-12">平均值</div>
                    <div class="line"></div>
                    <div class="font2 font-12">(血糖)</div>
                    <div class="bar_bg">
                      <div id="bar3">
                        <div class="bar_inner">
                          <div class="bar"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                  <!--进度条 结束-->
                </div>

              </div>
              <script>

                  $(function () {
                      $("[id=pro]").popover({
                          trigger: 'manual',
                          placement: 'top', //placement of the popover. also can use top, bottom, left or right
                          title: '', //this is the top title bar of the popover. add some basic css
                          html: 'true', //needed to show html of course
                          style: 'padding:0;position:absolute;',
                          content: '<p style="color:#959595;font-size:12px;">' +
                                  '此平均值不考虑个别情况' +
                                  '</p>', //this is the content of the html box. add the image here or anything you want really.
                          animation: false
                      }).on("mouseenter",function () {
                                  var _this = this;
                                  $(this).popover("show");
                                  $(this).siblings(".popover").on("mouseleave", function () {
                                      $(_this).popover('hide');
                                  });
                              }).on("mouseleave", function () {
                                  var _this = this;
                                  setTimeout(function () {
                                      if (!$(".popover:hover").length) {
                                          $(_this).popover("hide")
                                      }
                                  }, 100);
                              });
                  });



              </script>

            </div>
            <div class="height col-md-4 ">
              <div class="height_value"><span class="font-yahei" style="color:#959595;">身高</span><br /><span class="ont-yahei" style="font-size:24px;font-weight:bold;">175cm</span></div>
            </div>


          </div>
        </div>
      </div>
      <div class="row" style="margin-top:20px;">
        <%= render template: 'health_records/index'%>
      </div>

    </div>








    <%#= render partial: 'patients/patient_page_aspects' %>
  </div>

  <div class="modal fade" id="flashalert" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <% flash.each do |key, value| %>
            <div class="modal-body" id="alert<%= key %>">
              <%= value %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<script>
    function showflash() {
        $('#flashalert').modal('show');
    }
    function hideflash() {
        $('#flashalert').modal('hide');
    }
    <% if flash[:success] %>
    jQuery(document).ready(function () {
        setTimeout("showflash()", 1);
        setTimeout("hideflash()", 1500);
    });
    <% end %>
</script>
