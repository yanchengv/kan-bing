<%@doctor_users.each do |doctor|%>
    <dl class="space">
        <dt class="pull-left space3">
            <%if  !doctor['photo'].empty?%>
                <%= link_to image_tag("#{doctor['photo']}", alt:"default",:width => "75",:height => "105" ),"/doctors/doctorpage/#{doctor['id']}" %>
            <% else %>
                <%= link_to image_tag("default.png", alt:"default",:width => "75",:height => "105"),"/doctors/doctorpage/#{doctor['id']}" %>
        <%end%>
        </dt>
            <dd class="lineheight-30">
              <strong><%=link_to "#{doctor['name']}","/doctors/doctorpage/#{doctor['id']}",:class=>"font-18 font-yahei font-color3" %></strong>
              <% @user = User.new %>
              <%@hospital = @user.get_req('hospitals/find?hospital_id='+doctor['hospital_id'].to_s+'&remember_token='+current_user['remember_token']) %>
              <%@department = @user.get_req('departments/find?department_id='+doctor['department_id'].to_s+'&remember_token='+current_user['remember_token']) %>
              <% if !@hospital.nil?%>
                  &nbsp;<%=@hospital['name']%>
              <%else%>
               <strong>&nbsp;医院&nbsp;</strong>无
              <%end%>
              <%if !@department.nil?%>
               &nbsp;<%=@department['name']%>
              <%else%>
                &nbsp;<strong>科室&nbsp;</strong>无
              <%end%>

            </dd>
            <dd class="lineheight-30"><strong>专长 <%#=t('users.user_home_aspects.skilled') %></strong><%=doctor['expertise']%></dd>
            <dd class="lineheight-30"><strong>说明 <%#=t('users.user_home_aspects.introduction') %></strong> <%=doctor['introduction'] %></dd>
    </dl>
    <hr />
    <% end%>