
  <% @patient_users.each do |patient| %>
      <dl class="">
        <dt class="pull-left space3">
          <% if  !patient['photo'].empty? %>
              <%= link_to image_tag("#{patient['photo']}", alt: "default", :width => "75", :height => "105",:class => "img_bg"), "/patients/patientpage/#{patient['id']}" %>
          <% else %>
              <%= link_to image_tag("default.png", alt: "default", :width => "75", :height => "105",:class => "img_bg"), "/patients/patientpage/#{patient['id']}" %>
          <% end %>
        </dt>
            <dd class="lineheight-30"><strong><%= link_to "#{patient['name']}", "/patients/patientpage/#{patient['id']}" ,:class=>"font-18 font-yahei font-color3" %></strong><dd>
            <dd class="lineheight-30"><strong>性别<%#=t('users.settings.sex') %>:</strong><%= patient['gender'] %><dd>
            <dd class="lineheight-30"><strong>年龄<%#=t('shared.page_frients_main_users.age') %>：</strong><%= patient['age'] %><dd>
            <dd class="lineheight-30"><strong>家庭住址<%#=t('shared.home_frients_users.home_address') %>：</strong><%= patient['address'] %><dd>
      </dl>
      <hr />
<% end %>
