<%= javascript_include_tag 'check_profile'%>

    <%= form_for '@user', remote: true, :url=>{:action=>'profile_update'}, :html => { :method => :post } do |f| %>
        <div class="form-group" style="margin-top:10px;clear:both;">
          <label for="username" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :username, '用户名'%></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%= f.text_field :username ,class:"form-control pull-left",:style => "width:65%",:value => current_user.name, :id=>'username',onblur:"checkUsername(this.value)" %>
            <div id="username_div" class="pull-left"></div>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group" style="margin-top:10px;clear:both;">
          <label for="name" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :name,'姓名 ' %></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%= f.text_field :name , class:"form-control pull-left",:style => "width:65%",:value => @user.name, :id=>'name',onblur:'checkName(this.value)' %>
            <div id="name_div" class="pull-left"></div>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group" style="margin-top:10px;clear:both;">
          <label for="email" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :email, t('.email')%></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%= f.text_field :email , class:"form-control pull-left",:style => "width:65%",:value =>  @user.email, :id=>'email',onblur:'checkEmail(this.value)' %>
            <div id="email_div" class="pull-left"></div>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group" style="margin-top:10px;clear:both;">
          <label for="language" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :language,'语言' %></label>

          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%= f.select :language ,options_for_select(LANGUAGES2,I18n.locale.to_s), :id=>'language' %>
          </div>

        </div>
        <div class="clearfix"></div>
        <div class="form-group" style="margin-top:10px;clear:both;">
          <label for="birth" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :birthdate, '出生日期'%></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%=f.text_field :birthdate,data:{format:'yyyy-MM-dd' },:value=>@user.birthday ,:class => 'form-control',id:'birth',:style => "width:65%;"%>
          </div>
        </div>
        <div class="clearfix"></div>
        <script type="text/javascript">
            $('#birth').datetimepicker({
                lang:'ch',
                timepicker:false,
                format:'Y-m-d'
            });

        </script>
        <div class="form-group" style="margin-top:10px;clear:both;">
          <label for="sex" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :sex, '性别'%></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <% if @user.gender=='男' %>
                <div class="row ">
                  <div class="col-md-6 col-cd-6 col-xs-6">
                    <%= f.radio_button 'sex', 'male', :checked=>true %> 男<%#=t('.man') %>
                  </div>
                  <div class="col-md-6 col-cd-6 col-xs-6">
                    <%= f.radio_button 'sex' , 'female' %>女<%#=t('.woman') %>
                  </div>
                </div>
            <% else %>
                <div class="row">
                  <div class="col-md-6 col-cd-6 col-xs-6">
                    <%= f.radio_button :sex, 'male' %>男<%#=t('.man') %>
                  </div>
                  <div class="col-md-6 col-cd-6 col-xs-6">
                    <%= f.radio_button :sex , 'female',:checked=>true %>女<%#=t('.woman') %>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group" style="margin-top:10px;clear:both;">
          <label for="address" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :address,'地址' %></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%= f.text_field :address , class:"form-control", :value =>@user.address, :id=>'address',:style =>'width:65%' %>
          </div>
        </div>
        <div class="clearfix"></div>
        <div class="form-group" style="margin-top:10px;clear:both;">
          <label for="address" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :phone,'电话' %></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%= f.text_field :mobile_phone , class:"form-control pull-left", :value =>@user.mobile_phone,:style =>'width:65%', :id=>'phone',onblur:'checkPhone(this.value)' %>
            <div id="phone_div" class="pull-left"></div>
          </div>
        </div>
        <div class="clearfix"></div>

    <% if current_user.patient_id.nil?%>

        <div class="form-group" style="margin-top:20px;clear:both;">
          <label for="expertise" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :expertise,'专长' %></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%= f.text_area :expertise , class:"form-control", :value =>@user.expertise, :id=>'expertise' %>
          </div>
        </div>
        <div class="clearfix"></div>


        <div class="form-group" style="margin-top:20px;clear:both;">
          <label for="introduction" class="col-sm-2 col-cd-2 col-xs-6 control-label" style="line-height:34px;color:#6b6b6d;width:70px;padding:0"><%= f.label :introduction,'简介' %></label>
          <div class="col-sm-6 col-cd-10 col-xs-6">
            <%= f.text_area :introduction , class:"form-control", :value =>@user.introduction, :id=>'introduction' %>
          </div>
        </div>
        <div class="clearfix"></div>

    <%end%>


        <div class="form-group" style="margin-top:10px;clear:both;">
          <div class="col-md-2 col-sm-2 col-xs-2" style="width:70px;padding:0"></div>
          <div class="col-md-2 col-sm-2 col-xs-2" ><%= f.submit '确定', :id => 'profile_update' ,:class=>'btn btn_g',:style => "",onFocus:"check_content()"%></div>

        </div>
    <% end %>




