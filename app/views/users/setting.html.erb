<div id="contents" class="container bgcolor-purple" style="margin-top:-20px;">
  <div class="space2 space">
    <ul class="nav nav-tabs">
      <li class="active" id="d1">
        <a href="#d11" class="font-14 font-color3" data-toggle="tab"><span>/</span> <%= t('.profile_update')%></a>
      </li>
      <li id="d2">
        <a href="#d22" class="font-14 font-color3" data-toggle="tab"><span>/</span> <%= t('.password_update')%></a>
      </li>
      <li id="d3">
        <a href="#d33" class="font-14 font-color3" data-toggle="tab"><span>/</span><%= t('.privacy_update')%></a>
      </li>
    </ul>
    <div class="tab-content">
      <div id="d11" class="tab-pane active">
        <div class="row">
          <div class="col-md-2 col-sm-4">

            <%#@photo=current_user.photos.new%>
            <%#= render 'photos/photo_form',:obiect=>@photo %>
            <h4>照片预留处</h4>
          </div>
          <div class="col-md-7 col-sm-6">

            <%#= form_for '@user', remote: true, :url=>{:action=>'profile_update'}, :html => { :method => :post } do |f| %>
            <%= form_for '@user', remote: true, :url=>{}, :html => { :method => :post } do |f| %>
                <% name = @user['name']%><% email = @user['email']%><% birthday = @user['birthday']%><% gender = @user['gender']%>
                <% address = @user['address']%>  <% mobile_phone = @user['mobile_phone']%>
                <div class="form-group">
                  <label for="username"><%= f.label :username, t('.username')%></label>
                  <%= f.text_field :username ,class:"form-control",:value => current_user['name'], :id=>'username' %>
                </div>
                <div class="form-group">
                  <label for="realname"><%= f.label :realname, t('.realname')%></label>
                  <%= f.text_field :realname , class:"form-control",:value => name, :id=>'realname' %>
                </div>
                <div class="form-group">
                  <label for="email"><%= f.label :email, t('.email')%></label>
                  <%= f.text_field :email , class:"form-control",:value =>  email, :id=>'email' %>
                </div>
                <div class="form-group">
                  <label for="language"><%= f.label :language, t('.language')%></label>
                  <%# if current_user.language=='en' %>
                  <%= f.select :language ,options_for_select(LANGUAGES1,I18n.locale.to_s),:id=>'language'%>
                  <%# else %>
                  <%#= f.select :langua-ge ,options_for_select(LANGUAGES2,I18n.locale.to_s),  class:"pull-left form-control",:id=>'language' %>
                  <%# end %>
                </div>
                <div class="form-group">
                  <label for="birth"><%= f.label :birthdate, t('.birthdate')%></label>
                  <div id="birth" class="date datetime input-group">
                    <% if birthday.nil? %>
                        <%=f.text_field :birthdate,data:{format:'yyyy-MM-dd' },:value=>"" ,:class => 'form-control'%>
                    <% else %>
                        <%=f.text_field :birthdate,:value => birthday, data:{format:'yyyy-MM-dd' },:class => 'form-control' %>
                    <% end %>
                    <span  class="input-group-addon add-on">
                        <i data-time-icon="glyphicon glyphicon-time" data-date-icon="glyphicon glyphicon-calendar"></i>
                    </span>
                  </div>
                </div>
                <script type="text/javascript">
                    $(function() {
                        $('#birth').datetimepicker({
                            language: 'zh-CN',
                            pickTime: false
                        });
                    });
                </script>
                <div class="form-group">
                  <label for="email"><%= f.label :username, t('.sex')%></label>
                  <% if gender=='男' %>
                      <div class="row ">
                        <div class="col-md-6">
                          <%= f.radio_button 'sex', 'male', :checked=>true %><%=t('.man') %>
                        </div>
                        <div class="col-md-6">
                          <%= f.radio_button 'sex' , 'female' %><%=t('.woman') %>
                        </div>
                      </div>
                  <% else %>
                      <div class="row">
                        <div class="col-md-6">
                          <%= f.radio_button :sex, 'male' %><%=t('.man') %>
                        </div>
                        <div class="col-md-6">
                          <%= f.radio_button :sex , 'female',:checked=>true %><%=t('.woman') %>
                        </div>
                      </div>
                  <% end %>
                </div>
                <div class="form-group">
                  <label for="address"><%= f.label :address, t('.address')%></label>
                  <%= f.text_field :address , class:"form-control", :value =>address, :id=>'address' %>
                </div>
                <div class="form-group">
                  <label for="address"><%= f.label :phone, t('.phone')%></label>
                  <%= f.text_field :phone , class:"form-control", :value =>mobile_phone, :id=>'phone' %>
                </div>
                <div class="form-group">
                  <%= f.submit '确定', :id => 'profile_update' ,:class=>'btn btn-warning'%>
                </div>
            <% end %>
          </div>
          <div class="col-md-3 col-sm-2"></div>
        </div>
      </div>
      <div id="d22" class="tab-pane">
        <div class="row">
          <div class="col-md-6">
            <%= form_for '@user', remote: true, :url=>{:action=>'password_update'}, :html => { :method => :post } do |f| %>
                <div class="form-group">
                  <label for="old_pass"><%= f.label :old_password, t('.old_password')%></label>
                  <%= f.password_field :old_password, :id=>'old_pass', class:"form-control" %>
                </div>
                <div class="form-group">
                  <label for="pass"><%= f.label :new_password, t('.password')%></label>
                  <%= f.password_field :new_password, :id=>'pass', class:"form-control" %>
                </div>
                <div class="form-group">
                  <label for="pass_con"><%= f.label :password_confirmation, t('.password_confirmation')%></label>
                  <%= f.password_field :password_confirmation , :id=>'pass_con' , class:"form-control"%>
                </div>
                <div class="form-group">
                  <label for="code"><%= f.label :code, t('.code')%></label>
                  <%= f.text_field :code , :id=>'code', class:"form-control" %>
                </div>
                <div class="form-group">
                  <%= f.submit '确定', :id => 'password_update' ,:class=>'btn btn-warning'%>
                </div>
            <% end %>
          </div>
          <div class="col-md-6"></div>
        </div>
      </div>
      <div id="d33" class="tab-pane">
      </div>
    </div>

  </div>
  <script>
      function code_refresh(){
          $.ajax({
              url: '/code_refresh',
              success: function(data){
                  document.getElementById('code_i').innerHTML = '<img src="'+data.image+'" id="code_img" onclick="code_refresh()"/>';
              },
              error: function(data){
                  alert('请重新刷新验证码！');
              }
          });
      }
  </script>
</div>
