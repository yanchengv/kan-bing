<script>
    document.title = "<%= @patient.name%>" + "的健康档案";
</script>
<style>
    .h_title {
        margin: 0;
        border-bottom: 1px solid #dcdcdc;
        height: 50px;
        line-height: 50px;
        padding: 0 10px;
        font-family: "Microsoft YaHei", Arial;
        filter: progid:DXImageTransform.Microsoft.Gradient(gradientType=0, startColorStr=#ffffff, endColorStr=#f4f4f4);
        background: -ms-linear-gradient(top, #fff, #f4f4f4);
        background: -moz-linear-gradient(top, #fff, #f4f4f4);
        background: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#fff), to(#f4f4f4));
        background: -webkit-linear-gradient(top, #fff, #f4f4f4);
        background: -o-linear-gradient(top, #fff, #f4f4f4);
    }

    ul li {
        list-style: none;
        font-family: "Microsoft YaHei", Arial;
        margin: 0;
        padding: 0;
    }

    .d_wb {
        width: 80%;
        border-left: 2px solid #dcdcdc;
        margin: 0 auto;
    }

    .d_wb li {
        color: #333333;
        padding: 15px 0;
        text-align: left;
    }

    .d_dot {
        width: 15px;
        height: 15px;
        background: #02a9a1;
        display: inline-block;
        border-radius: 20px;
        margin-left: -48px;
        margin-right: 15px;
    }
    a.h_btn{
        padding:5px 15px;
        background:#e8e8e8;
        border:1px solid #d7d7d7;
        display:inline-block;
        margin-top:5px;

    }
        a{text-decoration: none;color:#333 !important;cursor: pointer;}
</style>
<!--<h3 style="text-align: center"><%#= @patient.name%> 的健康档案</h3>-->

<div style="width: 100%">
  <p class="h_title"><b>超声影像数据（<%= @ultrasounds.length %>）</b></p>
  <ul class="d_wb">

    <% @ultrasounds.each do |u| %>
        <li align="center">
          <span class="d_dot"></span>
          <span><%= u.hospital %></span>
          <span style="margin-right:10px;"><%= u.checked_at %></span>
          <span>
            <a class="h_btn" href="/weixin_patient/ultrasound?uuid=<%= u.thumbnail %>">查看</a>
          </span>
        </li>

    <% end %>
  </ul>
</div>

<div style="width: 100%">
  <p class="h_title" style="border-top:1px solid #dcdcdc;"><b>检验报告（<%= @reports.length %>）</b></p>
  <ul class="d_wb">

    <% @reports.each do |r| %>
        <li align="center">
          <span class="d_dot"></span>
          <span><%= r.hospital %></span>
          <span style="margin-right:10px;"><%= r.checked_at %></span>
          <span>
            <a class="h_btn" href="/weixin_patient/reports?uuid=<%= r.thumbnail %>">查看</a>
          </span>
    <% end %>
  </ul>
</div>

