 <% if !@iu.nil?%>
    <div style="background:#f2f2f2">
    <p class="h_title"><span class="health_arrow">></span><b>超声诊断</b></p>
    <table data-role="table" class="health_table ui-responsive">

      <tbody>
      <tr>
        <td>姓名</td>
        <td><%=@iu.patient_name %></td>
      </tr>
      <tr>
        <td>医院</td>
        <td><%=@iu.hospital %></td>
      </tr>
      <tr>
        <td>科别</td>
        <td><%=@iu.department %></td>
      </tr>
      <tr>
        <td>检查医生</td>
        <td><%=@iu.doctor %></td>
      </tr>
      <tr>
        <td>门诊号</td>
        <td><%=@iu.us_order_id %></td>
      </tr>
      <tr>
        <td>住院号</td>
        <td><%=@iu.bed_no%></td>
      </tr>
      <tr>
        <td>申请医生</td>
        <td><%=@iu.apply_doctor_name %></td>
      </tr>
      <tr>
        <td>检查项目</td>
        <td><%=@iu.examined_item_name %></td>
      </tr>

      </tbody>
    </table>
    <!--<img id="pic1" src="<%#= Settings.aliyunOSS.aliyun_img+"5eec9d136b1140388aeb2f5e01b749c9.jpg"%>"/>-->
    <img  id="pic1" src="<%= image_access_url_prefix_with(@pic1_uuid)%>" width="350" height="150"/>
    <p class="h_title"><b>超声所见</b></p>

      <%= @iu.us_finding %>
    <p class="h_title"><b>超声所得</b></p>
    <%= @iu.us_diagnose %>


    <%if @pics.length != 0%>
    <p class="h_title" id="tag2"><b>所有图像</b></p>
    <div id="pictures" class="video_lists">
      <table style="width:100%;">
        <% @pics.each do |p|%>
           <tr><td><img src="<%= image_access_url_prefix_with(p) %>"  width="350" height="150"/></td></tr>
        <% end %>
      </table>
    </div>
    <%end%>

    <%if !@videos.nil?%>
        <p class="h_title" id="tag3"><b>超声视频</b></p>
        <video id="example_video_1"   width="350" height="150" class="video-js vjs-default-skin video_lists" controls preload="none"
               poster="http://mimas-img.oss-cn-beijing.aliyuncs.com/17647225b86c47fc86089d1bff2ad450.jpg"
               data-setup="{}">
          <source src="http://mimas-video.oss-cn-beijing.aliyuncs.com/us-demo.mp4" type='video/mp4' />
        </video>
    <%end%>
     </div>
<%end%>







